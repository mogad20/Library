@model Account

<section class="vh-100 gradient-custom" style="z-index : 100;" >
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h2 class="mb-4 pb-2 pb-md-0 mb-md-5">Sign Up</h2>
                        <form method="post" asp-controller="Accounts" asp-action="AddNew" enctype="multipart/form-data">
                            <div asp-validation-summary="All" class="text-danger"></div>


                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div data-mdb-input-init class="form-outline">
                                        <label class="form-label" for="firstName" >First Name</label>
                                        <input type="text" asp-for="FirstName" class="form-control form-control-lg" />
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">

                                    <div data-mdb-input-init class="form-outline">
                                        <label class="form-label" for="lastName">Last Name</label>
                                        <input type="text" asp-for="LastName" class="form-control form-control-lg" />
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">

                                    <div data-mdb-input-init class="form-outline  w-100">
                                        <label class="form-label">Address</label>
                                        <input type="text" asp-for="Address" class="form-control form-control-lg" />
                                    </div>

                                </div>

                                <div class="col-md-6 mb-4 d-flex align-items-center">

                                    <div data-mdb-input-init class="form-outline  w-100">
                                        <label class="form-label">Phone Number</label>
                                        <input type="tel" asp-for="PhoneNumber" class="form-control form-control-lg" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>

                                </div>
                                
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">

                                    <div data-mdb-input-init class="form-outline">
                                        <label class="form-label">Email</label>
                                        <input type="email" asp-for="Email" class="form-control form-control-lg" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4 pb-2">

                                    <div data-mdb-input-init class="form-outline">
                                        <label class="form-label">Confirm Email</label>
                                        <input type="email" asp-for="ReEmail" class="form-control form-control-lg" />
                                        <span asp-validation-for="ReEmail" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">

                                    <div data-mdb-input-init class="form-outline">
                                        <label class="form-label" >Password</label>
                                        <input type="password" asp-for="Password" class="form-control form-control-lg" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4 pb-2">

                                    <div data-mdb-input-init class="form-outline">
                                        <label class="form-label">Confirm Password</label>
                                        <input type="password" asp-for="RePassword" class="form-control form-control-lg" />
                                        <span asp-validation-for="RePassword" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">

                                    <select class="select form-control-lg">
                                        <option value="1" disabled>Choose Gender</option>
                                        <option value="2">Male</option>
                                        <option value="3">Female</option>
                                        <option value="4">Other</option>
                                    </select>
                                    <label class="form-label select-label">Gender</label>

                                </div>
                            </div>
                            <div class="text-center text-lg-start mt-4 pt-2">
                                <div class="mt-4 pt-2">
                                    <input data-mdb-ripple-init class="btn btn-primary btn-lg" type="submit" value="Register" />
                                </div>
                                <p class="small fw-bold mt-2 pt-1 mb-0">
                                    Have you registered before? <a asp-action="GetLoginView" asp-controller="Accounts" class="link-danger">Login</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
