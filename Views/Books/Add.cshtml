@model Book
<div class="row">
    <form method="post" asp-controller="Books" asp-action="AddNew" class="col-4" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

   <div>
        <label form-control>@Html.DisplayNameFor(Book => Book.Name) </label>
       <input asp-for="Name" class="form-control"/>
   </div> 
   <div>
        <label form-control>@Html.DisplayNameFor(Book => Book.Author) </label>
            <input asp-for="Author" class="form-control" />
   </div> 
   <div>
        <label form-control>@Html.DisplayNameFor(Book => Book.genre) </label>
       <input asp-for="genre" class="form-control"/>
   </div>

        <div>
            <label class="form-label">@Html.DisplayNameFor(emp => emp.ImageFile)</label>
            <input type="file" asp-for="ImageFile" accept=".png,.jpg" class="form-control"
                   id="imageFile" onchange="AddImage()" />
        </div>

   <div>
        <label form-control> Statue </label>
        <input type="checkbox" asp-for="statue"  />
        <span asp-validation-for="statue" class="text-danger"></span>
    </div>


 
