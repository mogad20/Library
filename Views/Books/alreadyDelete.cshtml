@model Book


<h1 class="alert alert-secondary text-center m-3">
    Are you sure you want to delete this Account?
</h1>

<div class="row">
    <div class="col-8">
        <table class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Field</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Id</td>
                    <td>@Model.BookId</td>
                </tr>
                <tr>
                    <td>First Name</td>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <td>Author</td>
                    <td>@Model.Author</td>
                </tr>
                <tr>
                    <td>Genre</td>
                    <td>@Model.genre</td>
                </tr>
                <tr>
                    <td>Statue</td>
                    <td>@Model.statue</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="col-4">
        <form method="post" asp-controller="Books" asp-action="DeleteCurrent" asp-route-id="@Model.BookId" class="mt-3">
            <input type="hidden" asp-for="BookId" />
            <button type="submit" class="btn btn-danger col-12 mb-2" >Delete</button>
        </form>
        <div class="text-end">
            <a asp-action="GetDeleteView" class="btn btn-secondary col-12">Back To Full List</a>
        </div>
    </div>

</div>
