@model IEnumerable<Book>

 <center><h1>All of Books</h1></center>
<center>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 text-start">
            <a asp-action="GetBorrowView" asp-controller="Books" class="btn btn-success">Show My Books</a>
            <a asp-action="GetListView" asp-controller="Books" class="btn btn-secondary">Back To All Books</a>
        </div>
    </div>
</div>
</center>


               
<script>
    function fillSearch(value) {
        document.getElementById('searchInput').value = value;
    }
</script>
<br />
<br />
<center>
        <div class="col-12">
            <select class="form-control-lg" onchange="fillSearch(this.options[this.selectedIndex].text)">
                <option value="" disabled selected>Choose Category to Search for it !</option>
                <option value="1">Cultural</option>
                <option value="2">Religious</option>
                <option value="3">Historical</option>
                <option value="4">Sports</option>
            </select>
        </div>
        <br />
    <br />
    <br />
</center>
        <div class="row mb-4">
<center>
    <div class="col-md-6">
        <form class="d-flex" asp-action="Index">
            <div class="input-group">
                <input id="searchInput" name="searchString" class="form-control" type="text" placeholder="Search for Books by Name or Category.." aria-label="Search">
                <button class="btn btn-dark" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
            </div>
        </form>
    </div>
</center>
    </div>
        <center>
<div>
	@foreach (var book in Model)
	{

        <div class="card d-inline-block text-center col-3 m-1">
            <div class="card-body">
                <img src="@book.ImagePath" style="object-fit: cover; width: 100%; height: 100%;" />
            </div>
            <div class="card-header">@book.Name</div>
            <button class="btn btn-primary mt-3 mb-3" asp-action="Borrow" asp-controller="Books" asp-route-id="@book.BookId">Borrow Now</button>
        </div>
	}
</div>
</center>
